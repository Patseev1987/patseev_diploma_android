<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools" android:id="@+id/nav_graph"
            app:startDestination="@id/loginFragment">

    <fragment android:id="@+id/loginFragment" android:name="ru.bogdan.patseev_diploma.presenter.LoginFragment"
              android:label="fragment_login" tools:layout="@layout/fragment_login">
        <action android:id="@+id/action_loginFragment_to_workerFragment" app:destination="@id/workerFragment"
                app:popUpTo="@id/nav_graph"/>
        <action android:id="@+id/action_loginFragment_to_storageWorkerFragment"
                app:destination="@id/storageWorkerFragment" app:popUpTo="@id/nav_graph"/>
    </fragment>
    <fragment android:id="@+id/workerFragment" android:name="ru.bogdan.patseev_diploma.presenter.WorkerFragment"
              android:label="fragment_user" tools:layout="@layout/fragment_worker">
        <action android:id="@+id/action_workerFragment_to_cameraFragment" app:destination="@id/cameraFragment"/>
        <argument android:name="worker" app:argType="ru.bogdan.patseev_diploma.domain.models.Worker"/>
        <action android:id="@+id/action_workerFragment_to_recycleViewToolsFragment"
                app:destination="@id/recycleViewToolsFragment"/>
        <action android:id="@+id/action_workerFragment_to_helpFragment2" app:destination="@id/helpFragment2"/>
    </fragment>
    <fragment android:id="@+id/recycleViewToolsFragment"
              android:name="ru.bogdan.patseev_diploma.presenter.RecycleViewToolsFragment"
              android:label="fragment_recycle_view_tools" tools:layout="@layout/fragment_recycle_view_tools">
        <action android:id="@+id/action_recycleViewToolsFragment_to_toolFragment" app:destination="@id/toolFragment"/>
    </fragment>
    <fragment android:id="@+id/cameraFragment" android:name="ru.bogdan.patseev_diploma.presenter.CameraFragment"
              android:label="fragment_camera" tools:layout="@layout/fragment_camera"/>
    <fragment android:id="@+id/storageWorkerFragment"
              android:name="ru.bogdan.patseev_diploma.presenter.StorageWorkerFragment"
              android:label="fragment_storage_worker" tools:layout="@layout/fragment_storage_worker">
        <action android:id="@+id/action_storageWorkerFragment_to_recycleViewToolsFragment"
                app:destination="@id/recycleViewToolsFragment"/>
        <argument android:name="worker" app:argType="ru.bogdan.patseev_diploma.domain.models.Worker"/>
        <action android:id="@+id/action_storageWorkerFragment_to_cameraFragment" app:destination="@id/cameraFragment"/>
        <action android:id="@+id/action_storageWorkerFragment_to_helpFragment2" app:destination="@id/helpFragment2"/>
        <action android:id="@+id/action_storageWorkerFragment_to_takeToolFragment"
                app:destination="@id/takeToolFragment" app:popUpTo="@id/takeToolFragment"
        />
        <action android:id="@+id/action_storageWorkerFragment_to_giveToolFragment"
                app:destination="@id/giveToolFragment" app:popUpTo="@id/storageWorkerFragment"
        />
        <action android:id="@+id/action_storageWorkerFragment_to_sendToolFragment"
                app:destination="@id/sendToolFragment" app:popUpTo="@id/storageWorkerFragment"/>
        <action android:id="@+id/action_storageWorkerFragment_to_writeOffToolFragment"
                app:destination="@id/writeOffToolFragment" app:popUpTo="@id/storageWorkerFragment"/>
    </fragment>
    <fragment android:id="@+id/toolFragment" android:name="ru.bogdan.patseev_diploma.presenter.ToolFragment"
              android:label="fragment_tool" tools:layout="@layout/fragment_tool">
        <argument android:name="tool" app:argType="ru.bogdan.patseev_diploma.domain.models.tools.Tool"/>
    </fragment>
    <fragment android:id="@+id/helpFragment2" android:name="ru.bogdan.patseev_diploma.presenter.HelpFragment"
              android:label="fragment_help" tools:layout="@layout/fragment_help"/>
    <fragment android:id="@+id/giveToolFragment"
              android:name="ru.bogdan.patseev_diploma.presenter.ationsWithToolFragments.GiveToolFragment"
              android:label="fragment_give_tool" tools:layout="@layout/fragment_give_tool"/>
    <fragment android:id="@+id/sendToolFragment"
              android:name="ru.bogdan.patseev_diploma.presenter.ationsWithToolFragments.SendToolFragment"
              android:label="fragment_send_tool" tools:layout="@layout/fragment_send_tool"/>
    <fragment android:id="@+id/takeToolFragment"
              android:name="ru.bogdan.patseev_diploma.presenter.ationsWithToolFragments.TakeToolFragment"
              android:label="fragment_take_tool" tools:layout="@layout/fragment_take_tool"/>
    <fragment android:id="@+id/writeOffToolFragment"
              android:name="ru.bogdan.patseev_diploma.presenter.ationsWithToolFragments.WriteOffToolFragment"
              android:label="fragment_write_off_tool" tools:layout="@layout/fragment_write_off_tool"/>
</navigation>